// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               String            @id @default(uuid())
  email            String            @unique
  emailVerified    DateTime?         @map("email_verified")
  passwordHash     String?           @map("password_hash")
  name             String?
  image            String?
  subscriptionTier String            @default("free") @map("subscription_tier")
  createdAt        DateTime          @default(now()) @map("created_at")
  updatedAt        DateTime          @updatedAt @map("updated_at")
  books            Book[]
  readingProgress  ReadingProgress[]
  accounts         Account[]
  sessions         Session[]

  @@map("users")
}

model Account {
  id                String  @id @default(uuid())
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(uuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model Book {
  id               String            @id @default(uuid())
  userId           String            @map("user_id")
  title            String
  author           String?
  pdfUrl           String            @map("pdf_url")
  totalPages       Int               @map("total_pages")
  status           String            @default("processing") // processing, ready, failed
  processingErrors Json?             @map("processing_errors") // Array of error details for debugging
  createdAt        DateTime          @default(now()) @map("created_at")
  updatedAt        DateTime          @updatedAt @map("updated_at")
  user             User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  pages            Page[]
  scenes           Scene[]
  readingProgress  ReadingProgress[]

  @@index([userId])
  @@map("books")
}

model Page {
  id          String   @id @default(uuid())
  bookId      String   @map("book_id")
  pageNumber  Int      @map("page_number")
  textContent String   @map("text_content")
  sceneId     String?  @map("scene_id")
  createdAt   DateTime @default(now()) @map("created_at")
  book        Book     @relation(fields: [bookId], references: [id], onDelete: Cascade)
  scene       Scene?   @relation(fields: [sceneId], references: [id])

  @@unique([bookId, pageNumber])
  @@index([bookId])
  @@map("pages")
}

model Scene {
  id              String       @id @default(uuid())
  bookId          String       @map("book_id")
  startPage       Int          @map("start_page")
  endPage         Int          @map("end_page")
  pageSpreadIndex Int          @map("page_spread_index")
  setting         String?
  mood            String?
  descriptors     Json? // Full SceneAnalysis object
  createdAt       DateTime     @default(now()) @map("created_at")
  book            Book         @relation(fields: [bookId], references: [id], onDelete: Cascade)
  pages           Page[]
  soundscapes     Soundscape[]

  @@index([bookId])
  @@index([bookId, pageSpreadIndex])
  @@map("scenes")
}

model Soundscape {
  id                     String   @id @default(uuid())
  sceneId                String   @map("scene_id")
  audioUrl               String   @map("audio_url")
  duration               Int      @default(30)
  generationPrompt       String?  @map("generation_prompt")
  replicatePredictionId  String?  @map("replicate_prediction_id")
  createdAt              DateTime @default(now()) @map("created_at")
  scene                  Scene    @relation(fields: [sceneId], references: [id], onDelete: Cascade)

  @@map("soundscapes")
}

model ReadingProgress {
  id          String   @id @default(uuid())
  userId      String   @map("user_id")
  bookId      String   @map("book_id")
  currentPage Int      @map("current_page")
  updatedAt   DateTime @updatedAt @map("updated_at")
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  book        Book     @relation(fields: [bookId], references: [id], onDelete: Cascade)

  @@unique([userId, bookId])
  @@index([userId, bookId])
  @@map("reading_progress")
}
